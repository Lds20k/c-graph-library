{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "gdb: launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/test",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "launchCompleteCommand": "exec-run",
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb",
                "preLaunchTask": "make test"
            }
        }
    ]
}